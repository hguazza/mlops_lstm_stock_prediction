# Environment Configuration
ENVIRONMENT=development  # development | staging | production

# Database Configuration
# Development (SQLite) - Default for local development
DATABASE_URL=sqlite+aiosqlite:///./auth.db

# Production (PostgreSQL) - Uncomment and configure for production
# DATABASE_URL=postgresql+asyncpg://mlops_user:your_password@localhost:5432/stock_prediction
# DB_PASSWORD=your_secure_password_here

# Optional: Enable SQL query logging
# DATABASE_ECHO=false

# JWT Authentication Configuration
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin User Configuration (for initial setup)
# Used by scripts/init_db.py to create the first admin user
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123
ADMIN_FULL_NAME=Admin User

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=stock_prediction_lstm
MLFLOW_ARTIFACT_LOCATION=./mlruns_artifacts
MLFLOW_ENABLE_AUTOLOG=true
MLFLOW_MODEL_PREFIX=stock_predictor

# Model Configuration
MODEL_HIDDEN_SIZE=50
MODEL_NUM_LAYERS=2
MODEL_DROPOUT=0.2
MODEL_SEQUENCE_LENGTH=60
MODEL_LEARNING_RATE=0.001
MODEL_BATCH_SIZE=32
MODEL_EPOCHS=100
MODEL_EARLY_STOPPING=10

# Data Configuration
DATA_DEFAULT_PERIOD=60d
DATA_DEFAULT_SYMBOL=AAPL
DATA_YFINANCE_TIMEOUT=30
